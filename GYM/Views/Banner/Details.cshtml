@model GYM.Models.Banner

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <!-- Header Starts -->
        <div class="row">
            <div class="col-sm-12 p-0">
                <div class="main-header">
                    <h4>Fitnesh Price List</h4>
                    <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                        <li class="breadcrumb-item">
                            <a href="#">
                                <i class="icofont icofont-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Price List</a>
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        <!-- Header end -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text">Price Details</h5>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-inverse">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Title)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Heading)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.BannerPhotos)
                                            </th>
                                           
                                           

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => model.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.Heading)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(model => model.BannerPhotos)*@
                                                <img src="~/BannerImages/@Model.BannerPhotos" class="img-responsive img-rounded" width="300" height="200"  />
                                            </td>
                                        
                                            </tr>

                                    </tbody>
                                </table>

                                
                            </div>
                            <div>
                                <input type="hidden" asp-for="Id" />
                                @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
